<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/popup_wrong_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Неправильно"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/main_text2"
        android:textColor="@color/main_text_color"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Правильный ответ"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/just_text"
        android:textColor="@color/main_text_color"
        android:textSize="15dp">

    </TextView>

    <io.github.kexanie.library.MathView
        android:id="@+id/formula_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        app:text="1"
        app:engine="KaTeX">

    </io.github.kexanie.library.MathView>

    <Button
        android:id="@+id/btn_next"
        android:text="Далее"
        android:fontFamily="@font/main_text2"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_next_wrong"
        android:layout_marginBottom="5dp"
        >

    </Button>

</LinearLayout>